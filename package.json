{
  "name": "subathon-timer-server",
  "version": "1.0.0",
  "description": "A modular Node.js server for Penta's Twitch subathon timer",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "node --watch server.js",
    "prod": "pm2 start ecosystem.config.js",
    "prod:stop": "pm2 stop subathon-timer",
    "prod:restart": "pm2 restart subathon-timer",
    "prod:logs": "pm2 logs subathon-timer",
    "prod:status": "pm2 status",
    "prod:setup": "pm2 startup",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "twitch",
    "subathon",
    "timer",
    "websocket",
    "express"
  ],
  "author": "Eric Kelley",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^5.1.0",
    "tmi.js": "^1.8.5",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "pm2": "^5.3.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
